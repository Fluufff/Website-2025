---

import placeholder from '../assets/images/peep_placeholder.png'
import type { ImageMetadata } from 'astro';
import {Picture} from "astro:assets";

interface Props {
    icon?: string
    name: string
    title: string | string[]
}

const { icon, name, title } = Astro.props

const allImages = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/peeps/*.{jpg,jpeg,png}')

const image: ImageMetadata = icon ? (await allImages[`/src/assets/images/peeps/${icon}`]()).default : placeholder

---
<div class="peep" class:list={{ placeholder: !icon }}>
    <Picture src={image} formats={['avif', 'webp']} fallbackFormat={image.format} alt="" widths={[200, 400]} />
    <div class="peep__name">{name}</div>
    <div class="peep__title">{ Array.isArray(title) ? title.map(t => <div>{t}</div>) : title }</div>
</div>

<style lang="scss" is:global>
  @use '../styles/charter';
  @use '../styles/text-styles';

.peep {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;

  &.placeholder {
    picture {
      background: charter.$neutrals100;
      opacity: 0.5;
    }
    img {
      filter: contrast(0.5) grayscale(0.5);
    }
  }

  > picture {
    display: block;
    border-radius: 100%;
    height: 200px;
    width: 200px;
    pointer-events: none;

    > img {
      height: 200px;
      width: 200px;
      object-fit: cover;
      object-position: top center;
      border-radius: 100%;
    }
  }

  &__name {
    margin-top: 24px;
    color: charter.$primary700;
    @include text-styles.display4SemiBold;
  }

  &__title {
    margin-top: 16px;
    color: charter.$primary500;
    @include text-styles.display3SemiBold;
  }
}
</style>