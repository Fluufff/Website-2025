---
import placeholder from '../assets/images/peep_placeholder.png'
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'

interface Props {
  icon?: string
  name: string
  title: string | string[]
}

const { icon, name, title } = Astro.props

const allImages = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/peeps/*.{jpg,jpeg,png}')

const image: ImageMetadata = icon ? (await allImages[`/src/assets/images/peeps/${icon}`]!()).default : placeholder
---

<div class="peep" class:list={{ placeholder: !icon }}>
  <Picture src={image} formats={['avif', 'webp']} fallbackFormat={image.format} alt="" widths={[200, 400]} />
  <div class="peep__name">{name}</div>
  <div class="peep__title">
    {Array.isArray(title) ? title.map((t) => <div>{t}</div>) : title}
  </div>
</div>

<style lang="scss" is:global>
  @use '../styles/charter';
  @use '../styles/text-styles';

  .peep {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;

    &.placeholder {
      picture {
        background: charter.$neutrals100;
        opacity: 0.5;
      }
      img {
        filter: contrast(0.5) grayscale(0.5);
      }
    }

    > picture {
      display: block;
      border-radius: 100%;
      height: 200px;
      width: 200px;
      pointer-events: none;

      > img {
        height: 200px;
        width: 200px;
        object-fit: cover;
        object-position: top center;
        border-radius: 100%;
      }
    }

    &__name {
      margin-top: 24px;
      color: charter.$primary800;
      @include text-styles.display4SemiBold;
    }

    &__title {
      display: flex;
      flex-direction: column;
      gap: 2px;
      margin-top: 16px;
      color: charter.$primary600;
      @include text-styles.display3SemiBold;
    }
  }

  @media (max-width: 600px) {
    .peep {
      display: grid;
      grid-template-columns: 100px 1fr;
      grid-template-rows: auto auto;
      column-gap: 16px;
      row-gap: 0;
      align-items: center;

      &:nth-child(2n) {
        grid-template-columns: 1fr 100px;
        > picture {
          grid-column: 2;
        }

        .peep__name,
        .peep__title {
          grid-column: 1;
          align-self: flex-end;
          text-align: right;
        }
      }

      > picture {
        grid-column: 1;
        grid-row: 1 / 4;
        width: 100px;
        height: 100px;

        > img {
          width: 100px;
          height: 100px;
        }
      }

      &__name {
        grid-row: 1;
        margin-bottom: 16px;
      }

      &__title {
        grid-row: 2 / 3;
      }

      &__name,
      &__title {
        align-self: flex-start;
        grid-column: 2;
        font-size: 14px;
        gap: 4px;
        margin-top: 0;
        text-align: left;
      }
    }
  }
</style>
