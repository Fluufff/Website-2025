---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'
import Content from './Content.astro'

interface Props {
  headline: string
  image?: ImageMetadata
}

const { headline, image } = Astro.props
---

<div class="hero">
  {
    !!image && (
      <Picture
        src={image}
        formats={['avif', 'webp']}
        fallbackFormat="jpg"
        alt=""
        height={612}
        widths={[400, 800, 1200, 1600]}
      />
    )
  }
  <Content headline={headline}>
    <slot />
    <slot name="actions" slot="actions" />
  </Content>
</div>

<style lang="scss" is:global>
  @use '../../styles/text-styles';

  .hero {
    display: flex;
    flex-direction: row;

    > picture {
      overflow: hidden;
      position: relative;
      pointer-events: none;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: left;
      }
    }

    > picture,
    > .content {
      width: 50%;
      box-sizing: border-box;
      overflow: hidden;
    }

    .content {
      align-items: flex-start;
      > h2 {
        @include text-styles.heading1;
      }
      > p {
        text-align: left;
      }
      > .content__actions {
        align-self: flex-start;
        margin-top: 64px;
      }
    }
  }
</style>
