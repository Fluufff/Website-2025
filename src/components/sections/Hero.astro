---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'
import Content from './Content.astro'

interface Props {
  headline: string
  image?: ImageMetadata
  alignImage?: 'left' | 'right' | undefined
  id?: string
  alignContent?: 'start' | 'end' | undefined
}

const { headline, image, alignImage, id } = Astro.props
---

{
  image ? (
    <div id={id} class="hero">
      <Picture
        class:list={alignImage ? `align-${alignImage}` : ''}
        src={image}
        formats={['avif', 'webp']}
        fallbackFormat="jpg"
        alt=""
        height={612}
        widths={[400, 800, 1200, 1600]}
      />
      <Content headline={headline} alignContent={Astro.props.alignContent || 'start'}>
        <slot />
        {Astro.slots.has('actions') && <slot name="actions" slot={Astro.slots.has('actions') ? 'actions' : ''} />}
      </Content>
    </div>
  ) : (
    <Content headline={headline} id={id} class="hero" alignContent={Astro.props.alignContent}>
      <slot />
      {Astro.slots.has('actions') && <slot name="actions" slot={Astro.slots.has('actions') ? 'actions' : ''} />}
    </Content>
  )
}

<style lang="scss" is:global>
  @use '../../styles/text-styles';
  @use '../../styles/charter';
  @use 'sass:color';

  .hero .content__actions {
    margin-top: 64px;
  }

  .hero > .content,
  .hero.content {
    @media (min-width: 900px) {
      padding: 80px 104px;

      > h2 {
        @include text-styles.heading1;
      }
    }
  }

  .hero:not(.content) {
    display: flex;
    flex-direction: row;
    position: relative;

    > picture {
      overflow: hidden;
      position: relative;
      pointer-events: none;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        &.align-left {
          object-position: left center;
        }
        &.align-right {
          object-position: right center;
        }
      }
    }
    > picture,
    > .content {
      width: 50%;
      box-sizing: border-box;
      overflow: hidden;
    }
  }

  @media (max-width: 900px) {
    .hero:not(.content) {
      position: relative;
      flex-direction: column;
      width: 100%;
      overflow-x: clip;

      > picture {
        position: sticky;
        width: 100%;
        height: 100vh;
        top: 0;
      }

      > .content {
        position: relative;
        margin-top: -20vh;
        width: 100%;
        background: color.change(charter.$neutrals100, $alpha: 0.9) !important;
      }
    }
  }

  @media (max-width: 600px) {
    .hero .content {
      align-items: stretch;
      padding: 20px 16px;
    }

    .hero .content__container {
      align-items: stretch;
    }
    .hero .content > h2 {
      font-size: 40px;
      line-height: 52px;
      text-align: center;
    }
  }
</style>
