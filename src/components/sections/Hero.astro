---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'
import Content from './Content.astro'

interface Props {
  headline: string
  image?: ImageMetadata
  alignImageLeft?: boolean
}

const { headline, image, alignImageLeft } = Astro.props
---

<div class="hero">
  {
    !!image && (
      <Picture
        class:list={{ alignImageLeft }}
        src={image}
        formats={['avif', 'webp']}
        fallbackFormat="jpg"
        alt=""
        height={612}
        widths={[400, 800, 1200, 1600]}
      />
    )
  }
  <Content headline={headline}>
    <slot />
    {Astro.slots.has('actions') && <slot name="actions" slot={Astro.slots.has('actions') ? 'actions' : ''} />}
  </Content>
</div>

<style lang="scss" is:global>
  @use '../../styles/text-styles';
  @use '../../styles/charter';
  @use 'sass:color';

  .hero {
    display: flex;
    flex-direction: row;
    position: relative;

    > picture {
      overflow: hidden;
      position: relative;
      pointer-events: none;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        &.alignImageLeft {
          object-position: left center;
        }
      }
    }

    > picture,
    > .content {
      width: 50%;
      box-sizing: border-box;
      overflow: hidden;
    }

    .content {
      align-items: flex-start;
      justify-content: center;
      > h2 {
        @include text-styles.heading1;
      }
      > p {
        text-align: left;
      }
      > .content__actions {
        margin-top: 64px;
      }
    }
  }

  @media (max-width: 900px) {
    .hero {
      position: relative;
      flex-direction: column;
      width: 100%;
      overflow-x: clip;

      > picture {
        position: sticky;
        width: 100%;
        height: 100vh;
        top: 0;
      }

      .content {
        position: relative;
        margin-top: -20vh;
        width: 100%;
        background: color.change(charter.$neutrals100, $alpha: 0.9) !important;
      }
    }
  }

  @media (max-width: 600px) {
    .hero .content {
      align-items: stretch;
    }
    .hero .content > h2 {
      font-size: 40px;
      line-height: 52px;
      text-align: center;
    }
  }
</style>
