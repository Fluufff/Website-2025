---
import Logo from '../../assets/logo.svg'
import { Icon } from 'astro-icon/components'
---

<footer>
  <div class="footer__socials">
    <a href="/"><Logo class="footer__socials__logo" height={40} width="" /></a>
    <div class="socials__list">
      <a href="https://t.me/fluufff_announcements" target="_blank" rel="noreferrer"
        ><Icon name="cib:telegram-plane" /></a
      >
      <a href="https://www.facebook.com/fluufff/" target="_blank" rel="noreferrer"><Icon name="mdi:facebook" /></a>
      <a href="https://twitter.com/FluufffCon" target="_blank" rel="noreferrer"><Icon name="mdi:twitter" /></a>
      <a href="https://bsky.app/profile/fluufffcon.bsky.social" target="_blank" rel="noreferrer"
        ><Icon name="ri:bluesky-fill" /></a
      >
      <a href="https://youtube.com/@fluufff" target="_blank" rel="noreferrer"><Icon name="ri:youtube-fill" /></a>
    </div>
  </div>
  <div class="footer__links">
    <h4><a href="/about">About us</a></h4>
    <a href="/about#mission">Mission</a>
    <a href="/about#dreamteam">Dream Team</a>
  </div>
  <div class="footer__links">
    <h4><a href="/contact">Contact us</a></h4>
    <a href="/contact">Get in touch</a>
  </div>
</footer>
<div class="footer_legals">
  <span>Copyright © 2026 Flüüfff</span>
  <span>All Rights Reserved</span>
  <a href="/terms">Terms and Conditions</a>
  <a href="/privacy">Privacy Policy</a>
</div>

<style lang="scss" is:global>
  @use '../../styles/charter';
  @use '../../styles/text-styles';

  footer {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    padding: 72px 0;
    margin-top: auto;

    > .footer__socials {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 32px;

      > .footer__socials__logo {
        fill: charter.$primary700;
      }

      > .socials__list {
        display: flex;
        flex-direction: row;
        gap: 16px;

        a {
          display: flex;
          align-items: center;
          justify-content: center;
          height: 24px;
          width: 24px;
          background: charter.$accent1-500;
          border-radius: 5px;

          [data-icon] {
            font-size: 14px;
            color: charter.$neutrals100;
          }
        }
      }
    }

    > .footer__links {
      display: flex;
      flex-direction: column;
      gap: 8px;

      h4,
      h4 a {
        @include text-styles.display3SemiBold;
        margin-bottom: 8px;
      }

      a {
        @include text-styles.display3Regular;
        color: charter.$primary500;
        padding: 4px 0;

        &:hover {
          text-decoration: underline;
        }
      }
    }
  }

  .footer_legals {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 24px;
    @include text-styles.display3Regular;
    border-top: solid 1px charter.$accent2-200;

    > * {
      display: block;
      padding: 0 8px;

      color: charter.$neutrals700;
    }

    * + * {
      border-left: solid 1px charter.$neutrals300;
    }

    > a {
      text-decoration: underline;
      color: charter.$primary500;
    }
  }

  @media (max-width: 750px) {
    footer {
      position: relative;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px;

      > .footer__socials {
        width: 100%;
        align-items: center;
        margin-bottom: 16px;
      }
    }

    .footer_legals {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 500px) {
    footer {
      display: grid;
      grid-template-columns: auto auto;
      gap: 32px 16px;

      > .footer__socials {
        grid-column: 1 / 3;
      }
      > .footer__links {
        padding: 0 16px;
      }
    }
  }
</style>
