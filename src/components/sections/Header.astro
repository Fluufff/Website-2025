---
import Logo from '../../assets/logo.svg'
import Button from '../Button.astro'
import Countdown from '../countdown.vue'
---

<nav id="header">
  <a href="/"><Logo height={48} width="" /></a>
  <nav id="header_links">
    <a href="/" class="active">Home</a>
    <a href="/attend">Attend</a>
    <a href="/program">Program</a>
    <a href="/about">About</a>
    <a href="/contact">Contact</a>
    <Button label="Register" to="/" />
  </nav>
</nav>
<div id="registration_banner">
  <div id="registration_banner_text">Registration opens inâ€¦</div>
  <Countdown targetDate="2025-06-01T09:00:00Z" client:load />
</div>

<style is:global lang="scss">
  @use '../../styles/charter';
  @use '../../styles/text-styles';

  #registration_banner {
    display: flex;
    padding: 32px;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
    gap: 20px;
    background: charter.$accent700;

    #registration_banner_countdown {
      display: flex;
      flex-direction: row;
      gap: 2px;

      > div {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 2em;
      }
    }

    #registration_banner_countdown .label {
      color: charter.$accent300;
      font-family: var(--font-inter), sans-serif;
      font-size: 12px;
      font-style: normal;
      font-weight: 500;
      text-transform: uppercase;
      line-height: 12px;
    }

    #registration_banner_text,
    #registration_banner_countdown {
      color: charter.$neutrals100;
      font-family: var(--font-gatsby), sans-serif;
      font-size: 32px;
      font-style: normal;
      font-weight: 400;
      line-height: 40px; /* 125% */
      text-transform: uppercase;
    }
  }

  #header {
    display: flex;
    padding: 24px 32px;
    justify-content: space-between;
    align-items: center;
    background: charter.$primary100;

    > svg {
      fill: charter.$primary700;
    }

    &_links {
      display: flex;
      align-items: center;
      gap: 35px;

      a {
        color: charter.$primary600;
        @include text-styles.display3Regular;
        text-align: center;

        &.active {
          font-weight: 700;
        }

        &.button {
          background: charter.$primary600;
          border: 0;
          color: charter.$primary100 !important;
        }
      }
    }
  }
</style>
