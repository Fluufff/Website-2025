---
import Logo from '../../assets/logo.svg'
import Button from '../Button.astro'
import Countdown from '../countdown.vue'
---

<nav id="header">
  <a id="header_logo" href="/"><Logo height={48} width="" /></a>
  <nav id="header_links">
    <a href="/" class="active">Home</a>
    <a href="/attend">Attend</a>
    <a href="/program">Program</a>
    <a href="/about">About</a>
    <a href="/contact">Contact</a>
    <Button label="Register" to="https://registration.fluufff.org" />
  </nav>
</nav>
<div id="registration_banner">
  <div id="registration_banner_text">Registration opens inâ€¦</div>
  <Countdown targetDate="2025-06-01T12:00:00Z" client:load />
</div>

<style is:global lang="scss">
  @use '../../styles/charter';
  @use '../../styles/text-styles';

  #registration_banner {
    display: flex;
    padding: 32px;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background: charter.$accent700;

    #registration_banner_countdown {
      display: flex;
      flex-direction: row;
      gap: 2px;

      > div {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 2em;
      }
    }

    #registration_banner_countdown .label {
      color: charter.$accent300;
      font-family: var(--font-inter), sans-serif;
      font-size: 12px;
      font-style: normal;
      font-weight: 500;
      text-transform: uppercase;
      line-height: 12px;
    }

    #registration_banner_text,
    #registration_banner_countdown {
      color: charter.$neutrals100;
      font-family: var(--font-gatsby), sans-serif;
      font-size: 32px;
      font-style: normal;
      font-weight: 400;
      line-height: 40px; /* 125% */
      text-transform: uppercase;
    }
  }

  #header {
    display: flex;
    padding: 24px 32px;
    justify-content: space-between;
    align-items: center;
    background: charter.$primary100;

    #header_logo svg {
      fill: charter.$primary700;
    }

    &_links {
      display: flex;
      align-items: center;
      gap: 8px;
      margin: -16px 0;

      a {
        color: charter.$primary600;
        @include text-styles.display3Regular;
        text-align: center;

        &:not(.button) {
          padding: 18px 12px;
        }

        &:not(.button):hover {
          text-decoration: underline;
        }

        &.active {
          font-weight: 700;
        }

        &.button {
          background: charter.$primary600;
          border: 0;
          color: charter.$primary100 !important;
          margin-left: 16px;
        }
      }
    }
  }

  @media (max-width: 900px) {
    #header {
      flex-direction: column;
      padding: 12px 24px;

      #header_links {
        margin: -8px 0;
      }
    }

    #registration_banner {
      padding: 16px 24px;
    }
  }

  @media (max-width: 600px) {
    #header {
      padding: 12px 12px 6px;

      position: relative;
      #header_logo {
        align-self: flex-start;
        svg {
          height: 36px;
        }
      }

      #header_links {
        margin: 8px 0 0;
        border-top: solid 1px charter.$primary200;
        flex-wrap: wrap;
        align-self: stretch;
        align-items: center;
        justify-content: center;
        row-gap: 4px;
        a:not(.button) {
          padding: 12px;
        }
      }

      .button {
        position: absolute;
        right: 24px;
        top: 12px;
        padding: 8px 12px;
      }
    }

    #registration_banner {
      flex-direction: column;
      padding: 16px 12px;
      gap: 8px;

      #registration_banner_text {
        font-size: 24px;
        line-height: 28px;
        text-align: center;
      }

      #registration_banner_countdown {
        font-size: 24px;
        line-height: 28px;

        .time {
          font-size: 24px;
          line-height: 28px;
        }

        .label {
          font-size: 10px;
          line-height: 10px;
        }
      }
    }
  }
</style>
