---
import { Icon } from 'astro-icon/components'

interface Props {
  label: string
  to?: string
  outline?: boolean
  go?: boolean
}

const { label, to, outline = false, go = false } = Astro.props

const Element = to ? 'a' : 'button'
---

<Element href={to} class="button" class:list={{ outline }}>{label}{!!go && <Icon name="mdi:arrow-right" />}</Element>

<style lang="scss" is:global>
  @use '../styles/charter';
  @use '../styles/text-styles';

  .button {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    text-decoration: none;

    @include text-styles.display2SemiBold;
    padding: 14px 18px;
    gap: 3px;
    border-radius: 6px;
    line-height: 10px;

    background: charter.$secondary500;
    color: charter.$neutrals100;
    border: solid 1px charter.$secondary500;

    &.outline {
      color: charter.$secondary500;
      background: charter.$neutrals100;
    }

    > [data-icon] {
      font-size: 16px;
      margin: -3px 0 -3px 3px;
    }
  }
</style>
